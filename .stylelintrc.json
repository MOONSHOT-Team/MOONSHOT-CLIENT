{
  "extends": [
    "stylelint-config-standard",
    "stylelint-config-recess-order"
  ],
  "customSyntax": "postcss-styled-syntax",
  "rules": {
    "declaration-property-unit-allowed-list": {
      "/^border/": [
        "px"
      ],
      "unit-allowed-list": [
        "%",
        "deg",
        "px",
        "rem",
        "ms",
        "s",
        "em",
        "vw",
        "vh"
      ]
    }
  }
}